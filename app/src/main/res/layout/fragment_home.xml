<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề biểu đồ tháng -->
        <TextView
            android:id="@+id/tv_title_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu theo tháng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Biểu đồ theo tháng -->
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart_by_month"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5" />

        <!-- Nút cập nhật -->
        <Button
            android:id="@+id/btn_refresh_charts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật biểu đồ"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />

        <!-- Tiêu đề biểu đồ danh mục -->
        <TextView
            android:id="@+id/tv_title_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu theo danh mục"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Biểu đồ theo danh mục -->
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart_by_category"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#F5F5F5" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
